{
  "name": "@evolv/javascript-sdk",
  "version": "1.0.0",
  "description": "This is the official JavaScript client for the Evolv Technologies optimization platform.",
  "main": "dist/index.js",
  "module": "src/index.js",
  "exports": {
    "import": "./src/index.js",
    "require": "./dist/index.js"
  },
  "type": "module",
  "homepage": "https://www.evolv.ai",
  "bugs": {
    "url": "https://github.com/evolv-ai/javascript-sdk/issues",
    "email": "support@evolv.ai"
  },
  "directories": {
    "doc": "./docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/evolv-ai/javascript-sdk"
  },
  "engines": {
    "node": ">=13"
  },
  "scripts": {
    "prepublishOnly": "webpack --experimental-modules --config=webpack.prod.cjs",
    "test": "mocha --experimental-modules",
    "build": "webpack --experimental-modules --config=webpack.dev.cjs",
    "docs": "jsdoc -c jsdocs.config.json src/index.js src/docs/README.md",
    "release": "npm version $SEM_VER --no-git-tag-version && npm publish --access public",
    "staging:release": "npm version $SEM_VER --no-git-tag-version && npm publish --tag next --access public"
  },
  "author": {
    "name": "Evolv Technologies",
    "email": "support@evolv.ai"
  },
  "license": "MIT",
  "dependencies": {
    "base64-arraybuffer": "^0.2.0",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "jsdoc": "^3.6.3",
    "mocha": "^7.1.0",
    "webcrypto": "git+https://github.com/nodejs/webcrypto.git",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "xhr-mock": "^2.5.1",
    "xmlhttprequest": "^1.8.0"
  },
  "mocha": {
    "extension": [
      "js"
    ],
    "spec": "src/**/*.test.js",
    "recursive": true
  }
}
